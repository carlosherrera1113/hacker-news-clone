{
  "name": "hacker-news-clone",
  "version": "1.0.0",
  "description": "An API clone of the popular news site for computer science using TypeScript, GraphQL, and Node.js",
  "main": "src/index.ts",
  "scripts": {
    "start": "nodemon -r dotenv/config dist/index.js",
    "generate": "graphql-codegen --config codegen.yml",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc"
  },
