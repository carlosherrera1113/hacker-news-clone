    "@types/jsonwebtoken": "^8.3.3",
    "@types/node": "^12.7.5",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "dotenv": "^8.1.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "graphql-code-generator": "^0.18.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2"
  }
